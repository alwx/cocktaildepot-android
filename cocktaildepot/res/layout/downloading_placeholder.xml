<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/loaderPlaceholder"
              android:orientation="vertical"
              android:visibility="gone"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:gravity="center">

    <TextView android:id="@+id/loaderFailed"
              style="@style/Text.Small"
              android:visibility="gone"
              android:text="@string/error_loading_failed"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

    <Button android:id="@+id/loaderRepeat"
            android:background="@drawable/button_blue"
            android:layout_marginTop="5dp"
            android:text="@string/error_loading_failed_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            style="@style/Text.Small" />

    <ProgressBar android:id="@+id/loaderIndicator"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>
</LinearLayout>